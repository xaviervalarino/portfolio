{
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "imagemin-cli": "^6.0.0",
    "js-yaml": "^4.0.0",
    "live-server": "^1.2.1",
    "stylelint": "^13.10.0",
    "stylelint-config-recommended": "^3.0.0"
  },
  "scripts": {
    "prebuild": "node node_modules/optipng-bin/lib/install.js; node node_modules/jpegtran-bin/lib/install.js",
    "build": "./scripts/build.sh all",
    "build:lean": "./scripts/build.sh lean",
    "clean": "./scripts/build.sh --clean",
    "serve": "live-server ./dist",
    "dev": "npm run serve & npm run watch",
    "prewatch": "npm run build:lean",
    "watch": "source .paths; ./scripts/watch.js $src_dir",
    "deploy": "source .env; source .paths; rsync -azvhP --exclude=.htaccess $dist_dir/ $production",
    "deploy:testing": "source .env; source .paths; rsync -azvhP --exclude=.htaccess $dist_dir/ $testing"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "no-descending-specificity": [
        true,
        {
          "ignore": [
            "selectors-within-list"
          ]
        }
      ]
    }
  }
}
