{
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "imagemin-cli": "^6.0.0",
    "live-server": "^1.2.1",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0"
  },
  "scripts": {
    "prebuild": "node node_modules/optipng-bin/lib/install.js; node node_modules/jpegtran-bin/lib/install.js",
    "build": "npm run clean && npm run build:img & npm run build:html",
    "build:css": "cat ./src/css/*.css > ./dist/stylesheet.css",
    "build:fonts": "cp -rfv ./src/fonts ./dist",
    "build:favicon": "cp -rfv ./src/assets/favicon ./dist/assets/",
    "build:html": "./scripts/convert_md.sh",
    "build:img": "npm run clean:img && imagemin \"./src/assets/img/**/*\" --out-dir=\"./dist/assets/img\"",
    "build:list": "./scripts/create-project-list.js",
    "build:js": "cat ./src/js/*.js > ./dist/bundle.js",
    "build:video": "./scripts/ffmpeg.sh",
    "clean": "rm -rv \"./dist/*\"",
    "clean:favicon": "rm -rv \"./dist/assets/favicon\"",
    "clean:html": "rm -rv \"./dist/**/*.html\"",
    "clean:img": "rm -rv \"./dist/assets/img/*\"",
    "deploy:prod": "rsync -azvhP dist/ $production",
    "deploy:test": "rsync -azvhP dist/ $testing",
    "dev": "npm run build:html && npm run watch & npm run serve",
    "serve": "live-server \"./dist\"",
    "watch": "npm run watch:css & npm run watch:html & npm run watch:img & npm run watch:js & npm run watch:template & npm run watch:video",
    "watch:css": "chokidar \"./src/css/\" -c \"[ '{event}' = 'change' ] && stylelint {path} && npm run build:css\"",
    "watch:html": "chokidar \"./src/**/*.md\" -c \"[ '{event}' = 'change' ] && ./scripts/convert_md.sh {path}\"",
    "watch:img": "chokidar \"./src/assets/img/**/*\" -c \"[ '{event}' = 'change' ] && imagemin {path} --out-dir=./dist/assets/img\"",
    "watch:js": "chokidar \"./src/js/*.js\" -c \"npm run build:js\"",
    "watch:template": "chokidar \"./src/templates/\" -c \"./scripts/convert_md.sh\"",
    "watch:video": "chokidar \"./src/assets/video/*\" -c \"npm run build:video\""
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "no-descending-specificity": [
        true,
        {
          "ignore": [
            "selectors-within-list"
          ]
        }
      ]
    }
  }
}
